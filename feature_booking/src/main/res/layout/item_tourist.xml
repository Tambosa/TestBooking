<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/tourist_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_medium"
    android:layout_marginBottom="@dimen/margin_medium"
    app:strokeWidth="0dp"
    card_view:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tourist_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_main"
                android:textSize="@dimen/text_size_header"
                app:fontWeight="@dimen/text_weight_semi_bold" />

            <ImageButton
                android:id="@+id/btn_expand"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:backgroundTint="@color/background_transparent_accent"
                android:src="@drawable/baseline_keyboard_arrow_down_24"
                app:tint="@color/text_accent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/expandable_part"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tourist_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@color/background_container"
                android:hint="@string/name"
                app:boxStrokeWidth="0dp"
                app:hintTextColor="@color/text_light">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tourist_name_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="@color/text_main"
                    android:textSize="@dimen/text_size_common" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tourist_surname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@color/background_container"
                android:hint="@string/surname"
                app:boxStrokeWidth="0dp"
                app:hintTextColor="@color/text_light">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tourist_surname_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="@color/text_main"
                    android:textSize="@dimen/text_size_common" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tourist_date_of_birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@color/background_container"
                android:hint="@string/date_of_birth"
                app:boxStrokeWidth="0dp"
                app:hintTextColor="@color/text_light">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tourist_date_of_birth_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:textColor="@color/text_main"
                    android:textSize="@dimen/text_size_common" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tourist_citizenship"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@color/background_container"
                android:hint="@string/citizenship"
                app:boxStrokeWidth="0dp"
                app:hintTextColor="@color/text_light">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tourist_citizenship_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="@color/text_main"
                    android:textSize="@dimen/text_size_common" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tourist_passport_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@color/background_container"
                android:hint="@string/passport_number"
                app:boxStrokeWidth="0dp"
                app:hintTextColor="@color/text_light">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tourist_passport_number_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColor="@color/text_main"
                    android:textSize="@dimen/text_size_common" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tourist_passport_expire_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@color/background_container"
                android:hint="@string/passport_expire_date"
                app:boxStrokeWidth="0dp"
                app:hintTextColor="@color/text_light">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tourist_passport_expire_date_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:textColor="@color/text_main"
                    android:textSize="@dimen/text_size_common" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>